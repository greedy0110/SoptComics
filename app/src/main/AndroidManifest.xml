<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.sopt24.dshyun0226.soptcomics">
    <!-- 인터넷 접근 허용, 네트워크 상태 접근 허용, 와이파이 상태 접근 허용 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>

    <application
            android:name="org.sopt24.dshyun0226.soptcomics.SoptApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/MainTheme"
            android:usesCleartextTraffic="true">
        <activity android:name="org.sopt24.dshyun0226.soptcomics.presentation.view.activity.CommentActivity">
        </activity>
        <activity android:name="org.sopt24.dshyun0226.soptcomics.presentation.view.activity.WebtoonActivity">
        </activity>
        <activity android:name="org.sopt24.dshyun0226.soptcomics.presentation.comics_episode_overview.ComicsEpisodeOverviewActivity">
        </activity>
        <activity android:name="org.sopt24.dshyun0226.soptcomics.presentation.main.MainActivity"/>
        <activity
                android:name="org.sopt24.dshyun0226.soptcomics.presentation.view.activity.SplashActivity"
                android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="org.sopt24.dshyun0226.soptcomics.presentation.login.LoginActivity">
        </activity>
        <activity android:name="org.sopt24.dshyun0226.soptcomics.presentation.signup.SignupActivity">
        </activity>
    </application>

</manifest>