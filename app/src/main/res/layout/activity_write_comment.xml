<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".presentation.view.activity.WriteCommentActivity">
    <include layout="@layout/toolbar_write_comment"/>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/gray_rectangle_border">
        <TextView
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="제목"/>
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:hint="제목을 입력하세요."/>
    </LinearLayout>

    <EditText
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:padding="10dp"
            android:gravity="top|left"
            android:background="@null"
            android:id="@+id/txt_comment_write_comment"
            android:hint="@string/write_comment_hint"/>

    <LinearLayout
            android:background="@color/colorGray"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_margin="10dp"
                android:src="@drawable/writing_plus_btn"
                android:id="@+id/btn_comment_write_roll"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
    </LinearLayout>

    <ImageView
            android:layout_margin="10dp"
            android:src="@drawable/camera_btn"
            android:id="@+id/btn_bottom_write_comment_camera"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
</LinearLayout>
