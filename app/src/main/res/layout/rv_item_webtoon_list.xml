<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/ll_rv_item_webtoon_list_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <ImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/gray_rectangle_border"
            android:id="@+id/img_rv_item_webtoon_thumbnail"/>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gray_rectangle_border">

        <TextView
                android:id="@+id/txt_rv_item_webtoon_title"
                android:text="1화. 문어지지 말자!"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"/>

        <TextView
                android:id="@+id/txt_rv_item_webtoon_view_count"
                android:text="조회수 13만회"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_webtoon_title"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"/>

        <TextView
                android:id="@+id/txt_rv_item_webtoon_upload_date"
                android:text="19.03.25"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:textColor="@color/colorGray"
                app:layout_constraintStart_toEndOf="@+id/txt_rv_item_webtoon_view_count"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/txt_rv_item_webtoon_title"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>